---
import Header from "../components/Header.astro";
import { fade, slide, ClientRouter } from "astro:transitions";
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "A community of music producers and enthusiasts", image="/images/band.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<fade />
		<title>{title}</title>
	</head>
	<body class="min-h-screen">
		<Header />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
